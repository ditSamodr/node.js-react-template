{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": ["src", "backend/config", "backend/controller", "backend/middlewares", "backend/models", "backend/routes/foodRoutes.js", "backend/index.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
